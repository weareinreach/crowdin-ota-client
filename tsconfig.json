{
    "compilerOptions": {
        "module": "ESNext",
        "declaration": true,
        "target": "ES2020",
        "outDir": "./out",
        "lib": ["ESNext", "DOM"],
        "strict": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "excludeInternal": true,
        "excludeProtected": true,
        "excludeExternals": true,
        "excludePrivate": true,
        "hideGenerator": true,
        "readme": "none",
        "categoryOrder": ["Strings Management", "Content Management", "Helpers"]
    }
}
