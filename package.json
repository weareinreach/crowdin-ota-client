{
    "name": "@weareinreach/crowdin-ota-client",
    "version": "1.1.0",
    "description": "JavaScript library for Crowdin OTA Content Delivery",
    "main": "out/index.js",
    "types": "out/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/weareinreach/crowdin-ota-client/tree/main"
    },
    "files": [
        "out/**/*"
    ],
    "type": "module",
    "sideEffects": false,
    "scripts": {
        "test": "jest",
        "build": "tsup",
        "tsc": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint --fix \"{src,tests}/**/*.{js,ts}\"",
        "lint-ci": "eslint \"{src,tests}/**/*.{js,ts}\"",
        "test-coverage": "jest --ci --reporters=jest-junit --reporters=default --coverage --coverageReporters=cobertura --coverageReporters=html",
        "prepare": "husky install"
    },
    "keywords": [
        "Crowdin",
        "Over-The-Air",
        "OTA",
        "Content Delivery",
        "CDN",
        "instant",
        "translations",
        "internationalization",
        "javascript",
        "React Native",
        "i18next",
        "api",
        "web",
        "i18n",
        "l10n"
    ],
    "license": "MIT",
    "devDependencies": {
        "@edge-runtime/jest-environment": "^2.3.7",
        "@types/jest": "^29.5.8",
        "@types/node": "^18.18.9",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-circus": "^29.7.0",
        "jest-junit": "^15.0.0",
        "lint-staged": "^15.0.2",
        "msw": "^2.0.4",
        "prettier": "^2.8.8",
        "terser": "^5.24.0",
        "ts-jest": "^29.1.1",
        "tsup": "^7.2.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "just-extend": "^6.2.0"
    },
    "bugs": {
        "url": "https://github.com/crowdin/ota-client-js/issues"
    },
    "homepage": "https://crowdin.github.io/ota-client-js/",
    "directories": {
        "test": "tests"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
